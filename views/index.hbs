<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
    />
    <title>HOME</title>
  </head>
  <body>
    <div class="container">
      {{#if messages.success}}
        <div class="alert alert-success text-center" role="alert">
          {{messages.success}}
        </div>
      {{/if}}
      {{#if user}}
        <p>Welcome, {{user.username}}!</p>
        <a href="/logout">Logout</a>
      {{else}}
        <a href="/login">Login</a>
      {{/if}}
      <h1 class="text-center">Provinsi & Kabupaten</h1>
      {{#if user}}
        <a href="/create-provinsi" class="btn btn-primary">Add Provinsi</a>
        <a href="/create-kabupaten" class="btn btn-success">Add Kabupaten</a>
      {{/if}}
      <div class="container mt-5">
        <h2 class="mb-4 text-center">Daftar Provinsi</h2>
        <div class="row">
          {{#each provinsi}}
            <!-- Card 1 -->
            <div class="col-md-3 mb-4">
              <div class="card">
                <img
                  src="{{this.photo}}"
                  class="card-img-top"
                  alt="Provinsi 1"
                />
                <div class="card-body text-center">
                  <h5 class="card-title">{{this.nama}}</h5>
                  <p class="card-text">{{this.diresmikan}}</p>
                  <p class="card-text">{{this.pulau}}</p>
                  <p class="card-text">dibuat oleh : {{this.user.username}}</p>
                  <a href="#" class="btn btn-primary">Detail</a>
                </div>
              </div>
            </div>
          {{/each}}

        </div>
      </div>
    </div>
  </body>
</html>