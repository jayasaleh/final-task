<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
    />
    <title>Tambah Provinsi</title>
  </head>
  <body>
    <div class="container mt-5">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Tambah Data Provinsi</h2>
        <div>
          {{#if user}}
            <span class="me-3">Welcome, {{user.username}}!</span>
            <a href="/logout" class="btn btn-danger">Logout</a>
          {{else}}
            <a href="/login" class="btn btn-primary">Login</a>
          {{/if}}
        </div>
      </div>
      <div class="card p-4 shadow-sm">
        <form
          action="/create-provinsi"
          method="POST"
          enctype="multipart/form-data"
        >
          <div class="mb-3">
            <label class="form-label">Nama Provinsi</label>
            <input
              type="text"
              name="nama"
              class="form-control"
              placeholder="Nama Provinsi"
              required
            />
          </div>
          <div class="mb-3">
            <label class="form-label">Diresmikan</label>
            <input
              type="date"
              name="diresmikan"
              class="form-control"
              required
            />
          </div>
          <div class="mb-3">
            <label class="form-label">Foto Provinsi</label>
            <input type="file" name="image" class="form-control" />
          </div>
          <div class="mb-3">
            <label class="form-label">Wilayah</label>
            <select name="pulau" class="form-select" required>
              <option value="Jawa">Jawa</option>
              <option value="Sumatera">Sumatera</option>
              <option value="Kalimantan">Kalimantan</option>
              <option value="Sulawesi">Sulawesi</option>
              <option value="Papua">Papua</option>
              <option value="Kepulauan Nusa Tenggara">Kepulauan Nusa Tenggara</option>
              <option value="Kepulauan Maluku">Kepulauan Maluku</option>
            </select>
          </div>
          <button type="submit" class="btn btn-primary w-100">Simpan</button>
        </form>
      </div>
    </div>
  </body>
</html>